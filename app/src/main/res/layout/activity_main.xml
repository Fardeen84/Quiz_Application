<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forgotpage">
        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/arrow_line"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2296f3"
                android:text="Forget Password"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="27dp"
                android:paddingEnd="30dp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="330dp"
            android:layout_height="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liner"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORGET PASSWORD"
                    android:textStyle="bold"
                    android:textColor="#2296f3"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plese Enter your Email address.then we will send you and email to reset your password !"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="290dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:hint="Enter The Email"
                    android:textColorHint="#2296f3"
                    app:hintTextColor="#2296f3"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeColor="#0000ffff"
                    android:focusableInTouchMode="true"
                    android:focusable="false"
                    app:startIconDrawable="@drawable/mail_icon"
                    app:startIconTint="#2296f3"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColorHint="#2296f3"
                        android:id="@+id/Email"
                        android:background="@drawable/editboder"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/forgot"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#2296f3"
                    android:text="Next"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:textSize="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>