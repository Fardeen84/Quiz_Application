<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/count_desbord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
           android:layout_gravity="center"
            android:text="1"
            android:textSize="30dp"
            android:layout_margin="7dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_desbord"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/f2"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/namedasbord"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/gold"
                android:layout_gravity="start"
                android:text="Fardeen Khan"
                android:textStyle="bold"
                android:textSize="19dp"
               />
            <TextView
                android:id="@+id/gmail_dasbord"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:text="exemple@gmaildf sd fsfsd.com"
                android:textSize="12dp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:background="@drawable/levalbg"
            >
            <TextView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_gravity="center"

                android:text="100Rank"
                android:textStyle="bold"
                android:gravity="end"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>